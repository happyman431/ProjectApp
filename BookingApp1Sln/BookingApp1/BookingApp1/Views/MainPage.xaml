<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookingApp1.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
       
    <Label Text="Booking App"
              FontSize="15"
              FontAttributes="Bold"
              HorizontalOptions="Center" />
    <Label Text="username"/>
    <Editor Placeholder="Enter Name" Text="{Binding Name}"/>

    <Label Text="password"/>
    <Editor Placeholder="Enter password" Text="{Binding Gender}"/>

    
    <Button Text="Login" Command="{Binding DeleteCommand}" />
    <Button Text="Sign up" Command="{Binding DeleteCommand}" />
        <Button Text="Navigate to SignUpPage " Command="{Binding NavigateCommand}" />
        
        
        
    
    
    </StackLayout>

</ContentPage>